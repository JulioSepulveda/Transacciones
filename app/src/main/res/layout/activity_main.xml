<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/lvLastAmount"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLastDate"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textColor="@android:color/holo_orange_dark"
                android:lines="3"
                android:textAlignment="center" android:text="20\n02\n2020"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLastIdValue"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp" android:text="1111" app:layout_constraintStart_toEndOf="@+id/tvLastId"
                android:layout_marginStart="104dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLastAmountValue"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="12345.55"
                app:layout_constraintStart_toEndOf="@+id/tvAmount" android:layout_marginStart="56dp"
                android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLastId"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvAmount" app:layout_constraintStart_toEndOf="@+id/tvLastDate"
                android:layout_marginStart="64dp"/>
        <TextView
                android:text="@string/txt_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmount"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tvLastId"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/tvLastDate"
                android:layout_marginStart="64dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:text="@string/txt_Transactions" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lvLastAmount" app:layout_constraintStart_toStartOf="parent"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" android:layout_marginTop="8dp"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_transactions"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>


</android.support.constraint.ConstraintLayout>